<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="60dp"
    tools:context=".recipe.detailsMeal.DetailsMealFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mealImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/mealName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp" />

            <TextView
                android:id="@+id/maleCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp" />


            <LinearLayout
                android:id="@+id/hidenDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mealDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descreption"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp" />


                <TextView
                    android:id="@+id/mealYoutubeLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="link in youtube "
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp" />
            </LinearLayout>

            <Button
                android:id="@+id/moreDetails"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/show_more"
                android:layout_marginHorizontal="50dp"
                android:textSize="16sp"
                android:layout_marginVertical="10dp"
                android:textColor="@color/black"
                app:backgroundTint="@null"
                android:background="@drawable/input_text_filed" />


        </LinearLayout>
    </ScrollView>
</FrameLayout>