<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RecipeApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->

        <item name="colorPrimary">@color/black</item>
        <item name="backgroundColor">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorBackgroundFloating">@color/white</item>
        <item name="colorButtonNormal">@color/orange</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="boxStrokeColor">@color/orange</item>
        <item name="itemIconTint">@color/orange</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="itemTextColor">@color/bottomNavItemColor</item>
        <item name="itemRippleColor">@color/gray</item>
        <item name="background">@color/black</item>
        <item name="constraints">@android:color/holo_orange_light</item>


    </style>
    <style name="ThemeOverlay.RecipeApp.FullscreenContainer" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="backgroundColor">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorBackgroundFloating">@color/white</item>
        <item name="colorButtonNormal">@color/orange</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="boxStrokeColor">@color/orange</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="itemIconTint">@color/colorOnSurface</item>
        <item name="itemTextColor">@color/bottomNavItemColor</item>
        <item name="itemRippleColor">@color/bottomNavItemColorSelected</item>
        <item name="background">@color/colorSurface</item>

    </style>
</resources>